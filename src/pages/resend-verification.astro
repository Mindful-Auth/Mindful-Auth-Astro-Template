---
// Resend Verification Email page
import AuthLayout from '@/layouts/AuthLayout.astro';
---

<AuthLayout title="Resend Verification Email">
    <div class="auth-container">
        <div class="auth-card">
            <h1>Resend Verification Email</h1>
    <p>Enter your email address below, and we'll send you a link to verify your email.</p>
    
    <form id="resend-verification-form" method="post">
        <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div id="turnstile-container"></div>
        <button type="submit">Resend Verification Email</button>
        <p id="message"></p>
    </form>
    
    <a href="/login">‚Üê Back to Login</a>
    
    <script src="https://cdn.mindfulauth.com/astro/turnstile-init.js"></script>
    <script src="https://cdn.mindfulauth.com/astro/resend-verification.js"></script>
    </div>
    </div>
</AuthLayout>