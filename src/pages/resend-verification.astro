---
// Resend Verification Email page
import AuthLayout from "@/layouts/AuthLayout.astro";
---

<AuthLayout title="Resend Verification Email">
    <div class="auth-container">
        <div class="auth-card">
            <h1>Resend Verification Email</h1>
            <p>
                Enter your email address below, and we'll send you a link to
                verify your email.
            </p>

            <form method="post" data-mindfulauth-form="resend-verification">
                <div>
                    <label>Email</label>
                    <input
                        type="email"
                        name="email"
                        required
                        data-mindfulauth-field="email"
                    />
                </div>
                <div data-mindfulauth-turnstile></div>
                <button type="submit">Resend Verification Email</button>
                <p data-mindfulauth-field="message"></p>
            </form>

            <a href="/login">‚Üê Back to Login</a>

            <script src="https://cdn.mindfulauth.com/astro/turnstile-init.js"
            ></script>
            <script
                src="https://cdn.mindfulauth.com/astro/resend-verification.js"
            ></script>
        </div>
    </div>
</AuthLayout>
