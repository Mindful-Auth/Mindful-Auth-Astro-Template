---
// Magic Link Registration page
import AuthLayout from "@/layouts/AuthLayout.astro";
---

<AuthLayout title="Create Account with Magic Link">
    <div class="auth-container">
        <div class="auth-card">
            <h1>Create Your Account</h1>
            <p>
                Enter your details to get started with magic link
                authentication.
            </p>

            <form method="post" data-mindfulauth-form="magic-register">
                <div>
                    <label>Name</label>
                    <input
                        type="text"
                        name="name"
                        required
                        data-mindfulauth-field="name"
                    />
                </div>
                <div>
                    <label>Email</label>
                    <input
                        type="email"
                        name="email"
                        required
                        data-mindfulauth-field="email"
                    />
                </div>
                <div data-mindfulauth-turnstile></div>
                <button type="submit">Create Account</button>
                <div data-mindfulauth-field="message"></div>
            </form>

            <div class="auth-links">
                <a href="/magic-login">Already have an account? Sign In</a>
                <a href="/register">Register with Password</a>
            </div>

            <!-- MINDFUL AUTH CDN SCRIPTS. DO NOT DELETE -->
            <script src="https://cdn.mindfulauth.com/astro/turnstile-init.js"
            ></script>
            <script src="https://cdn.mindfulauth.com/astro/magic-register.js"
            ></script>
        </div>
    </div>
</AuthLayout>
