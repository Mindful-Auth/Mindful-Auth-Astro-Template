---
// Login page - Password authentication
import AuthLayout from "@/layouts/AuthLayout.astro";
---

<AuthLayout title="Sign In">
    <div class="auth-container">
        <div class="auth-card">
            <h1>Sign In with Password</h1>
            <p>Enter your email and password to get started.</p>

            <form method="post" data-mindfulauth-form="login">
                <div>
                    <label>Email</label>
                    <input
                        type="email"
                        name="email"
                        required
                        data-mindfulauth-field="email"
                    />
                </div>
                <div>
                    <label>Password</label>
                    <input
                        type="password"
                        name="password"
                        required
                        data-mindfulauth-field="password"
                    />
                </div>
                <div class="hidden" data-mindfulauth-field="twofa-section">
                    <label>Authenticator Code</label>
                    <input
                        type="text"
                        name="twofa-code"
                        pattern="[0-9]*"
                        maxlength="6"
                        placeholder="123456"
                        inputmode="numeric"
                        data-mindfulauth-field="twofa-code"
                    />
                    <a href="#" data-mindfulauth-field="use-recovery-link"
                        >Use a recovery code instead</a
                    >
                </div>
                <a href="/forgot-password">Forgot Your Password?</a>
                <div data-mindfulauth-turnstile></div>
                <button type="submit">Log In</button>
                <p data-mindfulauth-field="message"></p>
            </form>

            <div class="auth-links">
                <a href="/magic-login">Sign In with Magic Link</a>
                <a href="/register">Create an Account</a>
            </div>

            <!-- MINDFUL AUTH CDN SCRIPTS. DO NOT DELETE -->
            <script src="https://cdn.mindfulauth.com/astro/turnstile-init.js"
            ></script>
            <script src="https://cdn.mindfulauth.com/astro/login.js"></script>
        </div>
    </div>
</AuthLayout>
